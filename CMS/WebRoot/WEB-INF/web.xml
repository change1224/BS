<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  
  <!-- servlet定义 -->
  <servlet>
  	<servlet-name>ListCustomerServlet</servlet-name>
  	<servlet-class>com.oracle.cms.view.ListCustomerServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>HelloWorldServlet</servlet-name>
  	<servlet-class>com.oracle.cms.view.HelloWorldServlet</servlet-class>
  </servlet>
  
  <!-- servlet映射 -->
  <servlet-mapping>
  	<servlet-name>ListCustomerServlet</servlet-name>
  	<url-pattern>/listcustomers.view</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>HelloWorldServlet</servlet-name>
  	<url-pattern>/helloworld.view</url-pattern>
  </servlet-mapping>

</web-app>